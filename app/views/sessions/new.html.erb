<div class="wrap">
    <div class="login">
        <h1>ログイン</h1>
        <%= form_for(:session, url: login_path) do |f| %>
            <div class="login_form">
                <label for=mail>メールアドレス</label>
                <%= f.text_field :mail %>
            </div>
            <div class="login_form">
                <label for=password>パスワード</label>
                <%= f.text_field :password %>
            </div>
            <div class="btn1">
                <%= f.submit 'ログイン',{class:'btn2'} %>
            </div>
        <% end %>
    </div>
</div>
