<div id="topwrap2">
    <div class="back">
        <div class="form-wrapper">
            <h3>新規登録</h3>
            <%= form_for(@user, url:{controller:'users', action:'create'}) do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>
            <div class="form-item">
                <label for=mail></label>
                <%= f.text_field :mail ,placeholder: "メールアドレス"%>
            </div>
            <div class="form-item">
                <label for=name></label>
                <%= f.text_field :name ,placeholder: "ニックネーム"%>
            </div>
            <div class="form-item">
                <label for=password></label>
                <%= f.text_field :password ,placeholder: "パスワード"%>
            </div>
            <div class="form-btn">
                <%= f.submit '新規登録' ,{class: 'btn-sticky'}%>
            </div>
            <% end %>
        </div>
    </div>
</div>