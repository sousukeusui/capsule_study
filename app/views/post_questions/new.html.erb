<div class="post-questions-wrap container col-md-5">
    <div class="post-questions">
        <h1>問題投稿</h1>
        <P>自分だけのオリジナル問題を作ろう！</P>
        <%= form_for(@post_question, url:{controller:'post_questions', action:'create'}) do |f| %>
        <table>
            <div class="form-tbr">
                <tr>
                    <th><%= f.label  :name, '問題名'%></th>
                    <td><%= f.text_field :name %></td>
                </tr>
            </div>
            <div class="form-tbr">
                 <tr>
                    <th><%= f.label :explanation, '問題説明' %></th>
                    <td><%= f.text_area :explanation %></td>
                </tr>
            </div>
        </table>
            <div class="make-questions">
                <table>
                    <%= f.fields_for :user_questions do |form| %>
                        <tr>
                            <th><%= f.label :problem , '問題' %></th>
                            <th><%= f.label :answer, '答え' %></th>
                            <th><%= f.label :mistake1, '不正解１'%></th>
                            <th><%= f.label :mistake2, '不正解２'%></th>
                            <th><%= f.label :mistake3, '不正解３'%></th>
                        </tr>
                        <tr>
                            <%= render "user_question_fields",f: form %>
                            <div id="detail-association-insertion-point"></div>
                        </tr>
                    <% end %>
                </table>
            </div>

            <div class="links">
                <%= link_to_add_association "問題を追加",f,:user_questions, 
                    data: {
                        association_insertion_node: '#detail-association-insertion-point',
                        association_insertion_method: 'after'
                    }                    
                %>
            </div>
            <div class="post-questions-btn">
                <%= f.submit '投稿する',{class:'btn-sticky'} %>
            </div>
        <% end %>
    </div>
</div>