<div class="post-questions-myquestion-wrap container col-lg-5">
    <h1>問題編集</h1>
    <%= form_with model:@post_question,url:{controller:'post_questions',action:'update',id:@post_question.id},id:'edit' do |f| %>
    <table class="tbl-r02">
        <div class="form-group">
            <tr>
                <th><%= f.label :name,'問題名'%></td>
                <td><%= f.text_field :name %></td>
            </tr>
        </div>
        <div class="form-group">
            <tr>
                <th><%= f.label :explanation,'問題説明' %></th>
                <td><%= f.text_area :explanation %></td>
            </tr>
        </div>
    </table>
        <div class="make-questions">
            <%= f.fields_for :user_questions do |form| %>
                <%= render 'user_question_fields',f: form %>
            <% end %>
            <div id="detail-association-insertion-point"></div>
        </div>

        <div class="link">
            <%= link_to_add_association "問題を追加",f,:user_questions, 
                data: {
                    association_insertion_node: '#detail-association-insertion-point',
                    association_insertion_method: 'append'
                },
                class:"add-link"              
            %>
        </div>
        <div class="post-questions-btn">
            <%= f.submit '更新する',{class:'btn-sticky'} %>
        </div>
    <% end %>
</div>