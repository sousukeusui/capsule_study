<div class="post-question-mylist-wrap">
    <h1>問題編集</h1>
    <%= form_with model:@post_question,url:{controller:'post_questions',action:'update',id:@post_question.id},id:'edit' do |f| %>
        <div class="form-group">
            <%= f.label :name,'問題名'%>
            <%= f.text_field :name %>
        </div>
        <div class="form-group">
            <%= f.label :explanation,'問題説明' %> 
            <%= f.text_area :explanation %>
        </div>
        <%= f.fields_for :user_questions do |u| %>
            <div class="form-group">
                <%= u.label :problem,'問題' %>
                <%= u.text_area :problem %>
            </div>
            <div class="form-group">
                <%= u.label :answer, '答え' %>
                <%= u.text_field :answer %>
                </div>
            <div class="form-group">
                <%= u.label :mistake1, '不正解1' %>
                <%= u.text_field :mistake1 %>
            </div>
            <div class="form-group">
                <%= u.label :mistake2, '不正解2' %>
                <%= u.text_field :mistake2 %>
            </div>
            <div class="form-group">
                <%= u.label :mistake3, '不正解3' %>
                <%= u.text_field :mistake3 %>
            </div>
        <% end %>
    <% end %>
    <button type='submit' form='edit'>保存する</button>
</div>