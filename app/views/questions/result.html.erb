<div class="result_wrap">
    <h1>解答結果</h1>
    <div class="box-parent">
        <div class="box">
            <p>あなたの正解数は5問中<%= @correct %>問です。<br>コメント:&nbsp;<%= @msg %></p>
        </div>
    </div>
    <div class="model_answer">
        <h2>正解確認</h2>
        <table class="tbl-r02">
        <% number = 1 %>
            <tr>    
                <th>No.</th>
                <th>問題</th>
                <th>正解</th>
            </tr>
            <% @questions.zip(@answers) do |question,answer| %>
                <tr>
                    <td><%= number %></td>
                    <td><%= question %></td>
                    <td><%= answer %></td>            
                </tr>
                <% number+=1 %>
            <% end %>
        </table>
    </div>
    <div class="result-btn-box">
        <div class="result_btn">
            <a class="btn-sticky" href="/questions/answer">もう一度挑戦</a>
        </div>
        <div class="result_btn">
            <a class="btn-sticky" href="/posts">タイムラインへ</a>
        </div>
    </div>
</div>