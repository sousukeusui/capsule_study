<div class="posts-edit-wrap container col-md-5">
    <h1>投稿編集</h1>
    <div class="posts-edit">
        <%= form_for(@post, url:{controller:'posts', action:'edit', id:@post.id}) do |f| %>
        <div class="form-group">
            <%= f.label :content,'内容'%>
            <%= f.text_area :content ,{class:"form-control"} %>
        </div>
        <div class="edit-btn">
            <%= f.submit '更新',{class:'btn-sticky'} %>
        </div>
        <% end %>
    </div>
</div>