<div class="profile-edit-wrap">
    <h1>プロフィール編集</h1>
    <div class="profile-edit container col-lg-6">
        <%= form_for(@user,url:{controller:'users',action:'update'}) do |f| %>
            <%= render 'layouts/error_messages', model: f.object %>
            <div class="form-group">
                <%= f.label :name, 'ニックネーム' %>
                <%= f.text_field :name,{class:'form-control'}%>
            </div>
            <div class="form-group">
                <%= f.label :profile, '自己紹介'%>
                <%= f.text_area  :profile,{class:'form-control'} %>
            </div>
            <div class="form-group">
                <%= f.label :goal, '目標'%>
                <%= f.text_area  :goal,{class:'form-control'} %>
            </div>
            <div class="form-group">
                <%= f.label :image, '画像を選択',{class:'image_input_btn'} %>
                <p class= 'image_name'>選択されていません</p>
                <%= f.file_field :image ,{class:'image_form'} %>
            </div>
            <div class="edit-btn">
                <%= f.submit "保存する" ,{class: 'btn-sticky'}%>
            </div>
        <% end %>
    </div>
</div>

<script>
    $('input').on('change', function () {
    var file = $(this).prop('files')[0];
    $('p').text(file.name);
});
</script>