<div class="profile_edit">
    <h1>プロフィール編集</h1>
    <div class="edit_mydata">
        <%= form_for(@users ,url:{controller:'users', action: 'edit',id:@users.id}) do |f| %>
        <div class="form-group">
            <label for="image">画像</label>
        </div>
        <div class="form-group">
            <label for="name">ニックネーム</label>
            <%= f.text_field :name,{class:'form-control'}%>
        </div>
        <div class="form-group">
            <label for="profile">自己紹介</label>
            <%= f.text_area  :profile,{class:'form-control'} %>
        </div>
        <div class="button">
            <%= f.submit "保存" ,{class: 'btn2'}%>
        </div>
        <% end %>
    </div>
</div>