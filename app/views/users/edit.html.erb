<div class="profile_edit">
    <h1>プロフィール編集</h1>
    <div class="edit_mydata">
        <% if @user.errors.any? %>
            <ul>
            <% @user.errors.full_messages.each do |err| %>
                <li class='validates'><%= err %></li>
            <% end %>
            </ul>
        <% end %>
        <%= form_for(@user,url:{controller:'users',action:'update'}) do |f| %>
        <div class="form-group">
            <label for="image">画像</label>
            <%= f.file_field :image, {class: 'image'} %>
        </div>
        <div class="form-group">
            <label for="name">ニックネーム</label>
            <%= f.text_field :name,{class:'form-control'}%>
        </div>
        <div class="form-group">
            <label for="profile">自己紹介</label>
            <%= f.text_area  :profile,{class:'form-control'} %>
        </div>
        <div class="button">
            <%= f.submit "保存" ,{class: 'btn2'}%>
        </div>
        <% end %>
    </div>
</div>